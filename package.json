{
  "name": "webjet-movies",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Tony John <tonyjohnp3@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:client": "cd client && yarn install && yarn build",
    "client": "cd client && yarn start",
    "build:server": "babel server --out-dir build --ignore **/*.test.js",
    "server": "concurrently --kill-others-on-fail \"yarn build:server --watch\" \"nodemon build/server.js\"",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node build/server.js",
    "test:server": "jest",
    "test:client": "cd client && yarn test",
    "heroku-postbuild": "yarn build:server && yarn build:client"
  },
  "jest": {
    "roots": [
      "server"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "babel-jest": "^24.9.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  }
}
